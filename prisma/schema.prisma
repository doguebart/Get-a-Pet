// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

model Org {
  id            String @id @default(uuid())
  name          String
  description   String
  phone         String
  email         String
  password_hash String
  zip_code      String
  state         String
  city          String
  address       String

  created_at DateTime @default(now())

  pet Pet[]

  @@map("orgs")
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
}

enum PetAge {
  PUPPY
  ADULT
}

model Pet {
  id              String   @id @default(uuid())
  name            String
  specie          String
  size            PetSize
  age             PetAge
  characteristics String[]

  created_at DateTime  @default(now())
  adopted_at DateTime?

  Org   Org?    @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId String?

  @@map("pets")
}
